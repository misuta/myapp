<div class="container-fluid">
	<div class="row" id="row_title_contact">
		<div class="col-xs-12">
			<h1>Contact Us</h1>
		</div>
	</div>
</div>


<%= flash[:notice] %>

<%= form_tag("/static_pages/thank_you") do %>
<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-3">
		<div class="form-group">
			<%= label_tag :name, "Name *" %>
			<%= text_field_tag :name, nil, class:"form-control", placeholder:"Enter Name", :required => true %>
		</div>
		<div class="form-group">
			<%= label_tag :email, "Email Address *" %>
			<%= text_field_tag :email, nil, class: "form-control", placeholder:"your-email@your.domain", type:'email', :required => true%>
		</div>
		<div class="form-group">
			<%= label_tag :message %>
			<%= text_area_tag :message, nil, class: "form-control textarea", placeholder:"Enter Message" %>
		</div>
	</div>
</div>
<%= submit_tag "Send", class:"btn btn-defautl col-xs-offset-5 col-sm-offset-5" %>
<% end %>

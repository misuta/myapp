<% cache product do %>
<div class="col-sm-6 col-md-4 each_product">
  <div class="thumbnail">
    <%= image_tag(product.image_url, class:"img-responsive img_product") %>
  </div>
  <div class="caption">
    <h1 class="item_name"><%= product.name %></h1>
    <p class="item_description"><%= product.description %> 
    <ul>
      <li>Color: <%= product.colour %></li>
    </ul>
      
    </p>
    <p class="item_price"><strong><%= product.price %> â‚¬</strong></p>
    <p>
      <%= link_to 'Show', product, class:"btn btn-link", role:"button"%>
      <%= link_to 'Edit', edit_product_path(product), class:"btn btn-link", role:"button" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-link", role:"button" %>
    </p>
  </div>
</div>
<% end %>
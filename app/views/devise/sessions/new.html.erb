<div class="container-fluid">
  <div class="row" id="row_title_new_session">
    <div class="col-xs-12">
      <h2>Log in</h2>
    </div>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"form-horizontal"}) do |f| %>

  <div class="form-group">
    <%= f.label :email, class:"col-xs-offset-2 control-label col-xs-2" %><br />
    <div class="col-xs-4">
      <%= f.email_field :email, autofocus: true, class:"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class:"col-xs-offset-2 control-label col-xs-2" %><br />
    <div class="col-xs-4">
      <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-xs-offset-4">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-xs-offset-4 col-xs-10">
      <%= f.submit "Log in", class:"btn btn-default" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
